<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background">

    <TextView
        android:id="@+id/help_dialog_title"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:padding="24dp"
        android:text = "Title"
        android:textStyle="bold"
        android:textColor="@color/actionMenuTextColor"
        android:layout_gravity = "center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/helpDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/instruction"
        android:textStyle="italic"
        android:textColor="@color/colorAccentSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_dialog_title"
         />

    <Button
        android:id="@+id/help_dialog_btn_ok"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/helpDialogContent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
