<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background">

    <TextView
        android:id="@+id/help_dialog_title"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:padding="24dp"
        android:text = "Title"
        android:textStyle="bold"
        android:textColor="@color/actionMenuTextColor"
        android:layout_gravity = "center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/helpDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start|left"
        android:text="@string/instruction3"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:textColor="@color/colorAccentSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_dialog_title"/>


    <ImageView
        android:id="@+id/helpHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/help_middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpDialogContent"/>

    <TextView
        android:id="@+id/helpDialogBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/instruction1"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:textColor="@color/colorAccentSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpHeader"
        />
    <ImageView
        android:id="@+id/helpBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/help_bottom"
        app:layout_constraintTop_toBottomOf="@id/helpDialogBody"/>

    <TextView
        android:id="@+id/helpFooterDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/instruction2"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:textColor="@color/colorAccentSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpBody"
        />

    <ImageView
        android:id="@+id/helpFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/help_header"
        app:layout_constraintTop_toBottomOf="@id/helpFooterDialogContent"/>

    <Button
        android:id="@+id/help_dialog_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpFooter" />
</android.support.constraint.ConstraintLayout>
