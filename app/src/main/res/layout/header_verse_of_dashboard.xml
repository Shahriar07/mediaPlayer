<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp"
    android:background="@color/header_verse_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_verse_arabic"
        android:layout_width="match_parent"
        android:contentDescription="@string/header_verse_en"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingTop="8dp"
        android:src="@drawable/a961"
        android:layout_gravity="center_vertical|end"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/header_verse_bangla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_verse_arabic"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bangla_font"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="4dp"
        android:text="@string/header_verse_bn"
        android:textColor="@android:color/black"
        android:textSize="@dimen/surah_info_text_size_in_dashboard"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/header_verse_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="italic"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@id/header_verse_bangla"
        android:textSize="@dimen/surah_info_text_size_in_dashboard"
        android:text="@string/header_verse_en"/>

</RelativeLayout>
