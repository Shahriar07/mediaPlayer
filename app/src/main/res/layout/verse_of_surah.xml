<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:theme="@style/colorControlHighlight_ripple"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/verse_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:textStyle="bold"
        android:text="@string/surah_and_verse"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <!--CheckBox
        android:id="@+id/repeatCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:button="@null"
        android:textColor="@android:color/black"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/repeat"
        android:gravity="center_vertical"/-->

    <ImageView
        android:id="@+id/arabic_verse"
        android:layout_width="wrap_content"
        android:contentDescription="test"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/a11"
        android:layout_gravity="center_vertical|end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/verse_no"/>

    <!--TextView
        android:id="@+id/verse_transliteration_in_bangla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bangla_font"
        android:textStyle="bold"
        android:layout_gravity="start|center_vertical"
        android:gravity="center_vertical|center"
        android:text="test"/-->

    <TextView
        android:id="@+id/verse_translation_in_bangla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bangla_font"
        android:layout_gravity="start|center_vertical"
        android:gravity="center_vertical"
        android:layout_below="@id/arabic_verse"/>

    <TextView
        android:id="@+id/verse_translation_in_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/black"
        android:layout_gravity="start|center_vertical"
        android:gravity="center_vertical"
        android:layout_below="@id/verse_translation_in_bangla"/>

</RelativeLayout>
